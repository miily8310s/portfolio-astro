---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
---

<article class="bg-gray-700 rounded-lg cursor">
  <a href={`/blog/${post.slug}`}>
    <div class="mb-8 block rounded-lg overflow-hidden">
      <figure class="w-auto h-auto md:[480px] object-cover">
        <Image src={post.data.image.url} alt={post.data.image.alt} width={960} height={480} decoding='async' loading='lazy'
        class='transition duration-300 ease-in-out hover:scale-110' />
      </figure>
    </div>
    <div class="p-2">
      <h1 class="text-white font-semibold text-xl leading-6">{post.data.title}</h1>
      <p class="text-white text-sm leading-6">{post.data.description}</p>
    </div>
  </a>
</article>